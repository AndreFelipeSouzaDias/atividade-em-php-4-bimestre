    echo "\n--- Rodada $rodada de $totalRodadas ---\n";
    $sorteado = rand(1, 100);
    $tentativas = 0;

    while (true) {
        $chute = (int) readline("Digite um nÃºmero entre 1 e 100: ");
        $tentativas++;

        if ($chute == $sorteado) {
            echo "âœ… VocÃª acertou! O nÃºmero era $sorteado.\n";
            // Quanto menos tentativas, mais pontos
            $pontosRodada = max(0, 100 - ($tentativas - 1) * 10);
            $pontuacao += $pontosRodada;
            echo "VocÃª fez $pontosRodada pontos nesta rodada!\n";
            break;
        } elseif ($chute > $sorteado) {
            echo "ðŸ“‰ Muito alto! Tente um nÃºmero menor.\n";
        } else {
            echo "ðŸ“ˆ Muito baixo! Tente um nÃºmero maior.\n";
        }
    }
}

echo "\n==============================\n";
echo "ðŸ FIM DO JOGO!\n";
echo "Sua pontuaÃ§Ã£o total: $pontuacao pontos.\n";
echo "==============================\n";

if ($pontuacao >= ($totalRodadas * 70)) {
    echo "ParabÃ©ns! VocÃª Ã© um mestre da adivinhaÃ§Ã£o!\n";
} elseif ($pontuacao >= ($totalRodadas * 40)) {
    echo "Bom desempenho! Continue praticando.\n";
} else {
    echo "Foi por pouco... tente novamente!\n";
}

?>
